        <div class="cursos">
            <!-- ********** CURSOS RECOMENDADOS START ********** -->
            <section id="cursos-recomendados" class="cs_recomendados">
                <h2>Cursos em Destaque</h2>
                <p class="c_r_init">Lorem ipsum dolor, sit. Modi perspiciatis rem neque tempore, maiores dolor minima
                    adipisci voluptatum.</p>
                <div class="swiper ">
                    <div class="cursos-recomendados-swiper">
                        <!-- container -->
                        <div class="cursos-rec-container swiper-wrapper">
                            {{#each cursos }}
                                <!-- card start-->
                                <div class="cursos-erc-card swiper-slide">
                                    <img src="admin/img/cursos/{{ image }}" alt="">
                                    <div class="cursos-rec-content">
                                        <!-- Title -->
                                        <h5>{{#TruncateText name 50}} {{/TruncateText }} </h5>
                                        <!-- owner -->
                                        <span class="c_r_teacher"> {{ user.nome }} </span>
                                        <!-- avaliacoes -->
                                        <div class="c_r_rate">
                                            <p>4,8 </p>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <span>(40.347)</span>
                                        </div>
                                        <!-- Coust -->
                                        <p class="c_r_price"> {{#NumberFormat custo }} {{/NumberFormat }} </p>
                                        <span class="c_r_class1">Mais vendidos</span>
                                    </div>
                                </div>
                                <!-- card end -->
                                
                            {{/each}}
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
            </section>
            <!-- ********** CURSOS RECOMENDADOS END ********** -->

            <!-- ********* CURSOS START ********* -->
            <section id="cursos_display">
                 
                <h2>Todos os cursos</h2>
                <!-- Container -->
                <div class="cs_dis_container row">
                    {{#each cursos}}
                        
                        <!-- Card start -->
                        <a href="cursos/detalhes/{{ id }}" class="cs_dis_card col-12 col-sm-5 col-md-5  container-fluid">
                            <img src="admin/img/cursos/{{ image }}" alt="">
                            <!-- Heart -->
                            
                            <div class="cs_dis_card_contente">
                                <!-- CURSO name and image -->
                                <div class="cs_dis_user">
                                    {{#if user.imagem}}
                                        <img src="admin/img/profile/{{ user.imagem }}" alt="">
                                        <h5>{{ name }} </h5>
                                    {{else }}
                                        <img src="admin/img/{{ user.imagem }}" alt="">
                                        <h5>{{ user.nome }} </h5>
                                    {{/if}}
                                </div>
                                <!-- Litle description -->
                                <div class="cs_dis_descriptio">
                                    {{#TruncateText descricao 80}} {{/TruncateText }}
                                </div>
                                <!-- rate -->
                                <div class="cs_rate">
                                    <i class="bi bi-star-fill"></i>
                                    <p>5.0 <span>(132)</span></p>
                                    <p></p>
                                </div>
                            </div>
                        </a>
                        <!-- Card end -->
                    
                    {{/each}}

                </div>
                <div class="cs_pagination_container ">
                    <ul class="cs_pagination ">
                        <li><a href="#"><i class="bi bi-arrow-left"></i> </a></li>
                        <li><a href="#" class="cs_active">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#"><i class="bi bi-arrow-right"></i></a></li>
                    </ul>
                </div>
            </section>
