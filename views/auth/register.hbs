    {{> header }}
    <!-- MAIN START -->
    <main class="cadastro_form">
        <div class="container">
            <div class="form_container">
                <h2>Cadastro</h2>
                <form action="/cadastrar/enviar_registro" class="row" method="post">
                    <div class="col-10 col-md-5 container-fluid">
                        <label for="nome">Nome:</label>
                        <input type="text" name="name" class="form-control" placeholder="Seu nome..">

                        <label for="email">Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="...@gmail.com">

                        <label for="password">Senha:</label>
                        <input type="password" name="password" class="form-control" placeholder="Senha">

                        <label for="confirmPassword">Confirmar Senha:</label>
                        <input type="password" name="confirmPassword" class="form-control" placeholder="Confirmar senha">
                    </div>
                    <div class="col-10 col-md-5 container-fluid">
                        <label for="">Pais:</label>
                        <input type="text" name="" id="" class="form-control">

                        <label for="">Telefone:</label>
                        <input type="tel" class="form-control" placeholder="+244 9....">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Cadastrar-se">
                </form>
            </div>
        </div>
    </main>
    <!-- MAIN END -->
    {{> footer }}