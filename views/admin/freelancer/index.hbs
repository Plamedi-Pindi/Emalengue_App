{{> dashHeader }}
{{> dashSidebar }}
<!-- MAIN START -->
<main>
    <div class="container">
        <div class="fr_container">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Imagem</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefone</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each freelancers }}
                    <tr class="fr_rows">
                        {{!-- id --}}
                        <td><span class="fr_id">{{ id }}</span></td>
                        {{!-- image --}}
                        <td>
                            <img src="/admin/img/freelancers/{{ imagem }}" alt="Imagem do Freelancer" class="fr_img">
                        </td>
                        {{!-- Name --}}
                        <td>
                            <h5 class="fr_name"> {{ user.nome }} </h5>
                            <span class="fr_profissao"> {{ especialidade }} </span>
                        </td>
                    
                        {{!-- Email --}}
                        <td><span class="fr_email text-primary"> {{ user.email }} </span></td>
                        
                        {{!-- Email --}}
                        <td><span class="fr_email text-primary"> {{ phone }} </span></td>
                        <td>
                            <span class="fr_edit" title="Editar"><i class="bi bi-pencil-square"></i></span>
                            <a href="/dashboard/freelancer/eliminar/{{ id }}" class="fr_delete" title="Deletar"><i class="bi bi-trash3"></i></i></a>
                            <span class="fr_view" title="Mais detalhes" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop{{ id }}"> <i class="bi bi-eye"></i></span>
                        </td>
                    </tr>

                    <!--Freelancer Modal View -->
                    <div class="modal fade " id="staticBackdrop{{ id }}" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable ">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Mais Detalhes sobre Freelancer
                                    </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-10 col-md-6 container-fluid   fr_mdl_data1">
                                            {{!-- Image --}}
                                            <img src="/admin/img/freelancers/{{ imagem }}" alt="">
                                            {{!-- Name --}}
                                            <h3> {{ user.nome }} </h3>
                                            <span>Engenheiro de Software</span>

                                            <ul>
                                                <li>
                                                    <i class="bi bi-telephone-fill"></i> (+244) {{ phone }}
                                                </li>
                                                <li>
                                                    <i class="bi bi-envelope-at-fill"></i> 
                                                    {{ user.email }}
                                                </li>
                                                <li>
                                                    <i class="bi bi-globe-americas"></i> {{ pais }}
                                                </li>

                                            </ul>
                                        </div>
                                        <div class="fr_mdl_data2 col-10 col-md-5 container-fluid">
                                            <h3>Habilidades</h3>
                                            <ul>
                                                {{#each habilidades}}   
                                                 <li> {{ name }}</li>
                                                {{/each}}
                                            </ul>
                                            {{!--  --}}
                                            <h3 class="certificacoes"> Certificações</h3>
                                            <ul>   
                                                 <li> {{ certificacoes }}</li>
                                            </ul>
                                        </div>
        
                                        <hr class="col-10 container-fluid">
                                        <div class="col-10 container-fluid fr_mdl_data3">
                                            <h3>Sobre o Freelancer</h3>
                                            <div>
                                               {{ sobre }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Fechar</button>
                                    <a href="/dashboard/freelancer/baixar_cv/{{ id }}" type="button" class="btn btn-primary ft_mdl_dwl"> <i
                                            class="bi bi-cloud-arrow-down-fill"></i> Baixar CV</a>
                                    <a href="/dashboard/freelancer/baixar_bi/{{ id }}" type="button" class="btn btn-success ft_mdl_dwl"> <i
                                            class="bi bi-cloud-arrow-down-fill"></i> Baixar BI</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each }}
                    

                </tbody>
            </table>
        </div>

        <!-- MODALS ================================================= -->


    </div>
</main>
<!-- MAIN END -->
{{> dashFooter }}